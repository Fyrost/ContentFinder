<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNavy">

    <ImageButton
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@null"
            android:src="@drawable/ic_close"
            android:id="@+id/close_button_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView"/>

    <TextView
            style="@style/Heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BROWSE"
            app:layout_constraintEnd_toEndOf="@+id/favorite_text_menu"
            app:layout_constraintBottom_toTopOf="@+id/favorite_text_menu"
            android:layout_marginBottom="24dp"
            android:id="@+id/browse_text_menu"/>
    <TextView
            style="@style/Heading1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="42dp"
            android:text="FAVORITES"
            android:id="@+id/favorite_text_menu" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="73dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>