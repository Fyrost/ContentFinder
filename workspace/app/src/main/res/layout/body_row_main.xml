<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginRight="11dp">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorRouge">
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView_trackImg_row"
                    android:background="@color/colorDarkRouge"
                    tools:background="@drawable/avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="false"
                    android:scaleType="fitXY"/>
            <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="@id/imageView_trackImg_row"
                    app:layout_constraintBottom_toBottomOf="@id/imageView_trackImg_row"
                    app:layout_constraintStart_toStartOf="@id/imageView_trackImg_row"
                    app:layout_constraintEnd_toEndOf="@id/imageView_trackImg_row"
                    android:background="@drawable/gradient_recycler_item"/>
            <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:textColor="@color/colorWhite"
                    android:ellipsize="end"
                    tools:text="Starwars: The Last Jedi"
                    android:id="@+id/textView_trackName_row"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout2" android:textAllCaps="false"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:background="@drawable/rounded_recycler_item"
                    app:layout_constraintTop_toBottomOf="@+id/imageView_trackImg_row"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical" android:id="@+id/linearLayout2">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textStyle="italic"
                        android:textColor="@color/colorBeige"
                        android:id="@+id/textView_trackGenre_row"
                        android:singleLine="true"
                        android:ellipsize="end"
                        tools:text="Action"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/colorBeige"
                        tools:text="$ 10.50"
                        android:id="@+id/textView_trackPrice_row"
                        app:layout_constraintTop_toBottomOf="@+id/textView_trackGenre_row"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="0dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>