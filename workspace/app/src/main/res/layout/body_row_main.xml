<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/avatar"
            android:id="@+id/imageView_trackImg_row" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#760933"
            tools:text="Starwars: The Last Jedi"
            android:singleLine="true"
            android:ellipsize="end"
            android:id="@+id/textView_trackName_row" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_trackImg_row"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/colorNavy"
            android:id="@+id/textView_trackGenre_row"
            app:layout_constraintTop_toBottomOf="@+id/textView_trackName_row"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            tools:text="Action"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@color/colorNavy"
            tools:text="$ 10.50"
            android:id="@+id/textView_trackPrice_row"
            app:layout_constraintStart_toEndOf="@+id/textView_trackGenre_row"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_trackName_row"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>