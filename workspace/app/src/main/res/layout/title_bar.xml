<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRouge"
        android:paddingBottom="15dp">
    <EditText
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="19sp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@color/colorBeige"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:id="@+id/editText_search_titleBar"
            android:layout_marginStart="24dp"
            android:drawableRight="@drawable/ic_action_search"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/rounded_edit_text"/>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorRouge"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/colorBeige"
            app:tabTextColor="@color/colorBeige"
            app:tabIndicatorFullWidth="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_search_titleBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">
    </com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>